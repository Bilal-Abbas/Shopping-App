<!Doctype html>
<html>
	<head>

	<title> Shoping Center | <%= @page_title || "Admin" %> Buying Selling </title>
	<%= stylesheet_link_tag('application', :media => 'all') %>
	<%= javascript_include_tag 'application'%>
	<%= csrf_meta_tag %>

	</head>

	<body>
		<div id="header">

			<h2> Shoping App </h2>

		</div>

		<div id="main">

				<% if !flash[:notice].blank? %>
					<div class="notice">
					<%= flash[:notice] %>
					</div>
				<% end %>

			<div id="content">
				 <% if current_user %>
          <%= link_to "Sign out", destroy_user_session_path, method: :delete, :class => 'action sign_out' %>
        <% else %>       
          <%= link_to "Sign up", new_user_registration_path, :class => 'action sign_up' %>
          <%= link_to "Log in", new_user_session_path, :class => 'action sign_in' %>
   <% end %>

			<%= yield %>

			</div>

		</div>

		<div id="footer">

			<p id="copyright"> &copy; GigaLabs.co / Bilal Abbas </p>

		</div>


	</body>

</html>