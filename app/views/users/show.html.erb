<% @page_title = "Shown Users" %>


<%= link_to("<<Back to List", {:action => 'index'}, :class => 'back-link') %>

  <div class="user show">
    <h2>Shown Users </h2>

    <table summary="users details view">
      <tr>
        <th>Name:</th>
        <td><%=@user.name%></td>
      </tr>
      <tr>
        <th>Type:</th>
        <td><%=@user.type%></td>
      </tr>

      <tr>
        <th>Products:</th>
        <td><%=@user.products.map {|p| p.pname}%></td>
      </tr>
      <tr>
        <th>Quantity:</th>
        <td><%=@user.products.map {|p| p.pquantity}%></td>
      </tr>

        <th>Created:</th>
        <td><%=@user.created_at %></td>
      </tr>
      <tr>
        <th>Updated:</th>
        <td><%= @user.updated_at %></td>
      </tr>
    </table>
  </div>